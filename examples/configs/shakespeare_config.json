                    "lr": 0.8,
                    "momentum": 0.0
                },
                "aggregation_type": "WEIGHTED_AVERAGE",
                "active_user_selector": {
                    "_base_": "base_uniformly_random_active_user_selector"
                }
            },
            "client": {
